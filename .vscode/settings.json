{
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  "editor.formatOnSave": true,
  "editor.rulers": [80, 120],
  "search.exclude": {
    "**/node_modules": true,
    "**/app/bin/": true,
    "**/app/src/frontend/css/bootstrap/": true,
    "**/dist/": true,
    "**/.tmp/": true,
    "**/.nyc_output/": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.tmp": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.nyc_output/": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true
  },
  "standard.enable": false,
  "eslint.validate": ["javascript", "vue"]
}
